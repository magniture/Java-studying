<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cvn.mybatis.mapper.DepartmentMapper">

    <select id="findAll" resultType="com.cvn.mybatis.pojo.Department">
        select * from tbl_department
    </select>

    <update id="update" parameterType="com.cvn.mybatis.pojo.Department">
        update tbl_department set name = #{name}, tel = #{tel} where id = #{id}
    </update>

    <select id="findById" parameterType="string" resultType="com.cvn.mybatis.pojo.Department">
        select * from tbl_department where id = #{id}
    </select>

    <select id="cleanCache" resultType="int" flushCache="true">
        select count(id) from tbl_department
    </select>
</mapper>
